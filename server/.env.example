# Application Settings
APP_NAME=Fraud Detection API
APP_VERSION=1.0.0
DEBUG=false
API_V1_STR=/api/v1

# Security
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql://fraud_detection:secure_password@localhost:5432/fraud_detection_db
# Alternative: Use individual parameters
# POSTGRES_USER=fraud_detection
# POSTGRES_PASSWORD=secure_password
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=fraud_detection_db

DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# ML Model
ML_MODEL_PATH=/app/ml_models/lstm_fraud_model.h5
ML_SCALER_PATH=/app/ml_models/scaler.pkl
MODEL_VERSION=1.0.0

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Email Configuration (Optional)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME=Fraud Detection System

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
